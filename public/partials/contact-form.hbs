<div class="form-group">
  <label>Name</label>
  <input type="text" name="name" value="{{name}}"></input>
</div>
<div class="form-group">
  <label>SMS Phone Numbers</label>
  <input type="text" name="sms_phones" value="{{phoneList sms_phones}}"></input>
</div>
<div class="form-group">
  <label>Voice Phone Numbers</label>
  <input type="text" name="voice_phones" value="{{phoneList voice_phones}}"></input>
</div>
<div class="form-group">
  <label>Emails</label>
  <input type="text" name="emails" value="{{emails}}"></input>
</div>
<div class="form-group">
  <label>Notes</label>
  <textarea row="3" name="notes">{{notes}}</textarea>
</div>
<div class="form-group">
  <label>
    <input type="checkbox" name="notify" {{#if notify}}checked{{/if}}></input>
    Receive notifications?
  </label>
  <label>
    <input type="checkbox" name="disable_sms" {{#if disable_sms}}checked{{/if}}></input>
    Disable SMS Notifications?
  </label>
</div>
