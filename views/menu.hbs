<div class="row">
  <div class="col-lg-12">
    <h1>{{restaurant.name}}</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-8">
    <h3>Menu</h3>
    {{#each menu}}
      <h2>{{name}}</h2>
      <div class="list-group">
      {{#each items}}
        <div class="list-group-item">
          <div>
            <div><strong>{{name}}</strong> <i class="pull-right">${{price}}.00</i></div>
            <div>{{description}}</div>
          </div>
        </div>
      {{/each}}
      </div>
    {{/each}}
  </div>
  <div class="col-lg-4">
    <h3>Orders</h3>
  </div>
</div>