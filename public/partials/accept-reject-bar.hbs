<div class="accept-reject-bar">
  {{#is order.status 'accepted' 'denied'}}
    <div class="label-tag status-label {{order.status}}">{{capitalize order.status}}</div>
  {{/is}}
  {{#eq order.status 'submitted'}}
    <button class="btn-accept">Accept</button>
    <button class="btn-reject">Reject</button>
  {{/eq}}
  <a
    href="/manifests/manifest-{{order.id}}.pdf?review_token={{order.review_token}}"
    class="btn-download"
    target="_blank">Download</a>
</div>
