<!DOCTYPE html>
<html>
<head>
  <title>Goodybag{{{block "html-title"}}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Goodybag Catering CSS Stuff -->
  <link href="{{cdn (format 'dist/<%= version %>/css/goodybag.css' pkg)}}" rel="stylesheet">

  {{{block "css"}}}

  <!--[if lte IE 9]>
  <link rel="stylesheet" href="{{cdn "/css/ie-lte-9.css"}}">
  <![endif]-->
</head>
<body class="page {{{block "page"}}}">
  <div class="main-wrapper">
    {{> layout_navbar }}

    {{{block "banner"}}}

    <div id="main">
      {{{block "body"}}}
    </div>
    <div class="main-push"></div>
  </div>

  {{> layout_footer }}

  {{#if config.isDev}}
  <script src="{{cdn (format 'dist/<%= version %>/goodybag.js' pkg)}}"></script>
  {{else}}
  <script src="/components/requirejs/require.js"></script>
  <script src="/js/require-config.js"></script>
  {{/if}}

  <script>
  require( ['config'], function( config ){
    config.cdn = { baseUrl: '{{{config.cdn.baseUrl}}}' };
  });
  </script>

  {{> analytics }}

  {{{block "views"}}}
  {{{block "bootstrap"}}}
  {{{block "scripts"}}}
</body>
</html>
