<!--<OrderDetails>-->
<table cellpadding="0" cellspacing="0" style="width: 100%">
  <tr>
    <td class="main-width-constraint">
      <table class="main-width-constraint" cellpadding="0" cellspacing="0" style="width: 100%; background: #FFF5BE; border: solid #C0B497 1px; border-radius: 4px; padding-top: 8px; padding-bottom: 8px;">
      <!--<OrderDetailsBody>-->
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; font-style: italic; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">{{#if order.user.display_invoice_instead_of_order}}Invoice{{else}}Order{{/if}}:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;"><a style="color: #1155cc" href="{{config.baseUrl}}/orders/{{order.id}}">#{{order.id}}</a></td>
      </tr>
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; font-style: italic; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">Pickup Date:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;">{{datepart order.pickup_datetime}}</td>
      </tr>
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; font-style: italic; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">Pickup Time:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;">{{join (timeToRange (timepart order.pickup_datetime) "h:mm A") "-" }}</td>
      </tr>
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; font-style: italic; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">Guests:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;">{{order.guests}}</td>
      </tr>
      {{#eq order.status 'accepted'}}
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; font-style: italic; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">Points:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;"><a href="{{config.baseUrl}}/users/me/rewards" style="color: #1155cc">{{order.points}}</a></td>
      </tr>
      {{/eq}}
      <!--</OrderDetailsBody>-->
    </table>
    </td>
  </tr>
</table>
<!--</OrderDetails>-->