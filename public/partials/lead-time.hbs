<div class="row removable">
  <div class="form-group col-lg-3">
    <label class="control-label">Max Guests</label>
    <input type="number" class="form-control lead-times lead-max-guests" value="{{max_guests}}">
  </div>
  <div class="form-group col-lg-3">
    <label class="control-label">Hours</label>
    <input type="number" class="form-control lead-times lead-hours" value="{{lead_time}}">
  </div>
  <div class="form-group col-lg-3">
    <label class="control-label">Cancel Time</label>
    <input type="number" class="form-control lead-times lead-cancel-time" value="{{cancel_time}}">
  </div>
  <div class="form-group col-lg-3">
    <div class="btn-actions">
      <a href="#">
        <i class="remove-input icon-remove-circle icon-2x" data-title="Remove lead time restriction" ></i>
      </a>
    </div>
  </div>
</div>
