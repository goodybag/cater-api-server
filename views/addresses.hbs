<div class="container">
  <h1 class="col-lg-12 page-title">Address Book</h1>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="panel">
        <div class="panel-body">
          <div class="list-group">
            {{#each addresses}}
              <div class="list-item">
                {{> address }}
                <hr>
              </div>
            {{/each}}
          </div>
          <div id="add-new-address" class="list-group">
            <h3>Add new address</h3>
            <form method="post" action="/users/me/addresses">
              <fieldset>
                {{> edit_address }}
                <a href="/users/me" class="btn btn-default">Back to settings</a>
                <button type="submit" class="btn btn-primary pull-right">Create Address</button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{#extend "scripts"}}
<script src="/js/models/address.js"></script>
<script src="/js/collections/addresses.js"></script>
<script src="/js/views/address-view.js"></script>
<script>
  // Bootstrap models and plug into view
  var addressCollection = new Addresses();
  addressCollection.reset({{{json addresses}}});
  var addressView = new AddressView({ el: '#main', collection: addressCollection });
</script>
{{/extend}}
