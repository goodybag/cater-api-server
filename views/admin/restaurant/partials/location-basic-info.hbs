<div class="form-group">
  <label class="control-label" for="input-name">
    Name
    <span class="help-block">Required</span>
  </label>
  <input type="text" class="form-control" name="name" id="input-name" value="{{restaurant_location.name}}">
</div>
<div class="form-group actions">
  {{#unless restaurant_location.id}}
  <a class="btn btn-default" href="{{sidebarNav.baseUrl}}">Cancel</a>
  {{else}}
  <button class="btn btn-default btn-delete" type="button">Delete</button>
  {{/unless}}
  <button class="btn btn-primary" type="submit">Save</button>
</div>