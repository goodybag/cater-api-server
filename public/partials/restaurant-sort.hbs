{{#extend "css"}}
<link rel="stylesheet" href="/css/restaurant-filters.css">
{{/extend}}

<div id="sort">
  <h4>Sort by:</h4>
  <div class="panel-group panel-group-filters">
    <select name="sort" class="form-control sort">
      {{! denote desc sorting to keep urls relatively short }}
      <option value="name" {{#eq orderParams.sort "name"}}selected{{/eq}}>Name</option>
      <option value="price" {{#eq orderParams.sort "price"}}selected{{/eq}}>Lowest Price</option>
      <option value="priced" {{#eq orderParams.sort "priced"}}selected{{/eq}}>Highest Price</option>
      <option value="minorder" {{#eq orderParams.sort "minorder"}}selected{{/eq}}>Lowest Order Minimum</option>
      <option value="minorderd" {{#eq orderParams.sort "minorderd"}}selected{{/eq}}>Highest Order Minimum</option>
      <option value="deliveryfee" {{#eq orderParams.sort "deliveryfee"}}selected{{/eq}}>Lowest Delivery Fee</option>
      <option value="deliveryfeed" {{#eq orderParams.sort "deliveryfeed"}}selected{{/eq}}>Highest Delivery Fee</option>
    </select>
  </div>
</div>
