<div>
  <address>
    {{street}}<br>
    {{city}}<br>
    {{state}}<br>
    {{zip}}<br>
    {{#if is_default}}
      <p class="text-danger">This is your default address</p>
    {{/if}}
  </address>
  <div class="actions">
    <a href="addresses/{{id}}" class="btn btn-default">Edit</a>
    <a href="addresses/{{id}}" class="btn btn-default">Remove</a>
    {{#unless is_default}}
      <button class="btn btn-primary">Make default address</button>
    {{/unless}}
  </div>
  <hr>
</div>