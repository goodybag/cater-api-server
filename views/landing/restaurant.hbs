{{#extend "title"}} - Restaurants{{/extend}}
{{#extend "page"}}page-restaurants{{/extend}}

{{#extend "body"}}
{{> landing_navbar}}

<!--<PhotoStripe>-->
<div class="photo-stripe photo-stripe-indian">
  <img src="/img/restaurant-splash/photo-stripe.jpg" alt="">
</div>
<!--</PhotoStripe>-->

<!--<IntroSignup>-->
<section class="page-section" id="section-intro-signup">
  <div class="container">
    <h1 class="section-header">More Orders Instantly</h1>
    <div class="signup-info-wrapper">
      <div class="signup-col">
        <div class="inner">
          <h3>Be a Goodybag caterer</h3>
          <p>Enter your info and we'll get in touch soon!</p>
          <form action="/request-to-be-a-caterer" method="POST" class="form form-vertical">
            <div class="form-group">
              <label for="request-form-full-name">Full Name</label>
              <input type="text" id="request-form-full-name" name="name">
            </div>
            <div class="form-group">
              <label for="request-form-email">Email</label>
              <input type="email" id="request-form-email" name="email">
            </div>
            <div class="form-group">
              <label for="request-form-phone-number">Phone Number</label>
              <input type="text" id="request-form-phone-number" name="phone">
            </div>
            <div class="form-group">
              <label for="request-form-restaurant-name">Restaurant Name</label>
              <input type="text" id="request-form-restaurant-name" name="restaurant_name">
            </div>
            <div class="form-group form-group-submit">
              <button class="btn btn-primary">Submit my info</button>
            </div>
          </form>
        </div>
      </div>
      <div class="signup-info-col">
        <div class="inner">
          <ul class="check-points">
            <li>
              New Customers
              <div class="subtext">Our large corporate network exposes your menu and businesses to hundreds of new customers.</div>
            </li>
            <li>
              Higher value orders
              <div class="subtext">Increase your delivery order volume and reach new markets with high value catering orders.</div>
            </li>
            <li>
              Repeat business
              <div class="subtext">Grow and maintain a larger, more diverse customer base. We handle all customer service to best promote your business.</div>
            </li>
            <li>
              Free advertising
              <div class="subtext">We feature your restaurant on our website, social media, and weekly email campaigns, increasing your online presence in multiple ways.</div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!--</IntroSignup>-->

<!--<OutroCTA>-->
<section class="page-section" id="section-outro-cta">
  <div class="container">
    <h2>See how we can help grow your business</h2>
    <a href="/join" class="btn btn-primary btn-large btn-cta">Be a Goodybag caterer</a>
  </div>
</section>
<!--</OutroCTA>-->
{{/extend}}

{{#extend "scripts"}}
<script>
  require( ['jquery', 'navbar'], function( $ ){
    $('.navbar').navbar({ toggleText: false });
  });

  analytics.page('Restaurants Splash');
</script>
{{/extend}}