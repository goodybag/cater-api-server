{{#if photos}}
<div class="photos">

  {{#each photos}}
  {{#eq @index 0}}
  <div class="tile jumbo">
    <img src="{{filepicker url 698 350}}">
    <h2><span>{{name}}</span></h2>
  </div>
  {{else}}
  <div class="tile">
    <img src="{{filepicker url 350 350}}">
    {{#if name}}
    <h2>
      <span>{{name}}</span>
    </h2>
    {{/if}}
  </div>

  {{/eq}}
  {{/each}}
</div>
{{/if}}
