{{#extend "page"}}page-users{{/extend}}

{{#extend "page-head"}}
{{> admin_user_page_head}}
{{/extend}}

{{#extend "nav-col"}}
{{> admin_user_sidebar_nav}}
{{/extend}}

{{#extend "body"}}
<div class="container" id="main-container">
  <div class="table-list invoices-table-list striped">
    <div class="list-header">
      <label class="component item-selector">
        <input type="checkbox">
      </label>
      <div class="component list-info">
        {{invoices.length}} Invoice
        {{~#unless (eq invoices.length 1)}}s{{/unless}}
      </div>
      <ul class="component list-nav nav">
        <li class="selected-only popover-wrapper gb-dropdown right">
          <a data-role="popover" data-target="dropdown-popover" href="#">
            Set Status
            <i class="gb-icon-caret-down"></i>
          </a>
          <div class="popover-modal dropdown-popover">
            <a href="#"
              class="popover-item"
              data-action="set-status"
              data-status="pending">
              <span class="popover-item-icon"></span>
              <span class="popover-item-label">Pending</span>
            </a>
            <a href="#"
              class="popover-item"
              data-action="set-status"
              data-status="emailed">
              <span class="popover-item-icon"></span>
              <span class="popover-item-label">Emailed</span>
            </a>
            <a href="#"
              class="popover-item"
              data-action="set-status"
              data-status="paid">
              <span class="popover-item-icon"></span>
              <span class="popover-item-label">Paid</span>
            </a>
            <a href="#"
              class="popover-item"
              data-action="set-status"
              data-status="error">
              <span class="popover-item-icon"></span>
              <span class="popover-item-label">Error</span>
            </a>
          </div>
        </li>
      </ul>
    </div>
    <div class="list-items">
    {{#each invoices}}
      <div class="list-item" data-id="{{this.id}}">
        <label class="component item-selector">
          <input type="checkbox">
        </label>
        <div class="component main">
          <a href="{{replace ../config.invoice.pdfRoute ':id' this.id}}" class="item-title">#{{this.id}}
            {{datepart this.billing_period_start}} -
            {{datepart this.billing_period_end~}}
          </a>
          <span class="label-tag label-status small {{this.status}}">{{capitalize this.status}}</span>
          <dl class="item-details dl-horizontal-auto">
            <div>
              <dt>Number of Orders:</dt>
              <dd>{{this.orders.length}}</dd>
            </div>
            <div>
              <dt>Total:</dt>
              <dd>${{dollars (invoice this 'total')}}</dd>
            </div>
            {{#if this.email_sent_date}}
            <div>
              <dt>Email Send Date:</dt>
              <dd>{{formatDateTime ../this.email_sent_date}}</dd>
            </div>
            {{/if}}
          </dl>
          <div class="more-actions-and-info bottom">
            <button
              class="action btn-default"
              data-id="{{this.id}}"
              data-action="send-email">
                {{~#is this.status 'pending' 'error'}}Send Email{{else}}Re-Send Email{{/is~}}
            </button>
            <button
              class="action btn-default"
              data-id="{{this.id}}"
              data-action="delete">Delete</button>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
</div>
{{/extend}}

{{#extend "scripts"}}
<script>
require([
  'app/models/user'
, 'app/views/admin/edit-user-view'
, 'jquery-loaded'
, 'api'
, 'utils'
, 'table-list'
], function( User, View, $, api, utils ) {
  api.invoices = api('invoices');

  var user = new User( {{{json user}}} );
  var view = new View( {
    model: user
  , el: '#users-edit'
  , patch: true
  });

  $(function(){
    $('.table-list').gb_tablelist();
    $('[data-role="popover"]').gb_popover();

    var actions = {
      'delete': function( $target, $el, id ){
        api.invoices( id ).del( function( error ){
          if ( error ){
            console.error( error );
            return alert('Error deleting invoice. CMD+Shift+J for details');
          }

          $el.remove();
        });
      }

    , 'send-email': function( $target, $el, id ){
        api.invoices( id )('emails').post( function( error, result ){
          if ( error ){
            console.error( error );
            return alert('Error deleting invoice. CMD+Shift+J for details');
          }

          $el.find('.label-status')
            .removeClass('pending error paid')
            .addClass('emailed')
            .text('Emailed');
        });
      }

    , 'set-status': function( $target, $el, id ){
        var status = $target.data('status');
        var $items = $('.list-item.selected');

        utils.async.each( $items, function( item, next ){
          var $item = $(item);
          api.invoices( +$item.data('id') ).put({ status: status }, next );
        }, function( error ){
          if ( error ){
            console.error( error );
            return alert('Error saving invoice. CMD+Shift+J for details');
          }

          $items.find('.label-status')
            .removeClass('pending emailed error paid')
            .addClass( status )
            .text( status[0].toUpperCase() + status.slice(1) );

          // close the popover
          $el.closest('.open').removeClass('open');
        });
      }
    };

    $('[data-action]').click( function( e ){
      e.preventDefault();

      var $this   = $(this);
      var id      = +$this.data('id');
      var action  = $this.data('action');

      actions[ action ]( $this, $('.list-item[data-id="' + id + '"]'), id );
    });
  });
});
</script>
{{/extend}}
