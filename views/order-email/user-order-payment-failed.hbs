{{#extend "body"}}
  <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
      <td style="width: 46%; padding-bottom: 22px;">
        {{#eq order.type 'pickup'}}
        {{> order_email_details_user_pickup }}
        {{else}}
        {{> order_email_details_user_delivery }}
        {{/eq}}
      </td>
      <td style="width: 47%; padding-top: 2px; padding-bottom: 22px; padding-left: 12px;">
        <h1 style="line-height: 36px; margin-top: 0; margin-right: 0; margin-bottom: 0; margin-left: 0; padding-top: 0; padding-right: 0; padding-bottom: 0; padding-left: 0; font-weight: 500; font-size: 28px; font-family: Helvetica, arial, sans-serif; text-align: left; color: #695a42">Order Payment Declined!</h1>
        <p style="text-align: left; line-height: 22px; font-weight: 300; font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px;">Credit card transaction declined for order placed at <a style="color: #1155cc" href="{{config.baseUrl}}/restaurants/{{order.restaurant.id}}">{{order.restaurant.name}}</a>. You can resubmit your order payment <a href="{{config.baseUrl}}/orders/{{order.id}}/payment">here</a> or contact our customer support team at (512) 270-6555</p>
      </td>
    </tr>
  </table>

  {{> email_order_items order}}

  <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
      <td style="width: 50%; padding-top: 2px; padding-top: 12px; font-size: 24px; font-weight: 300;">
        <a href="{{config.baseUrl}}/orders/{{order.id}}/payment" style="text-decoration: none; color: #ffffff; font-family: Helvetica, arial, sans-serif;">
          <table cellpadding="0" cellspacing="0" style="margin-left: auto; margin-right: auto;">
            <tr>
              <td style="padding-top: 10px; padding-right: 28px; padding-bottom: 10px; padding-left: 28px; white-space: nowrap; background: #DC0500; border-radius: 4px; border: solid #B80300 1px; font-family: Helvetica, arial, sans-serif; color: #ffffff">
                <a href="{{config.baseUrl}}/orders/{{order.id}}/payment" style="color: #ffffff; font-size: 20px; text-decoration: none; font-family: Helvetica, arial, sans-serif;">Resubmit Payment</a>
              </td>
            </tr>
          </table>
        </a>
      </td>
    </tr>
  </table>
{{/extend}}