{{#extend "html-title"}}{{delivery_service.name}}{{/extend}}
{{#extend "page"}}page-delivery-service{{/extend}}

{{#extend "page-head"}}
<div class="container" id="main-container">
  <ul class="breadcrumbs main-breadcrumbs">
    <li>
      <a href="/admin/delivery-services">Delivery Services</a>
    </li>
    <li>{{delivery_service.name}}</li>
  </ul>

  <h1 class="page-title">Edit Delivery Service - {{delivery_service.name}}</h1>
</div>
{{/extend}}

{{#extend "nav-col"}}
{{> admin_delivery_service_sidebar_nav}}
{{/extend}}

{{#extend "body"}}
<h2>Basic Info</h2>

<form id="edit-item-form"
  action="{{sidebarNav.baseUrl}}/basic-info"
  method="POST"
  class="form ap-form form-vertical">
  {{> admin_delivery_service_basic_info_form}}
</form>
{{/extend}}

{{#extend "scripts"}}
{{> admin_item_form}}
<script>
  require( ['item-form'], function( form ){
    form.on('item:saved', function( model ){
      window.location.href = '/admin/delivery-services';
    });
  });
</script>
{{/extend}}
