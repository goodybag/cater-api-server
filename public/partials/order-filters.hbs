{{#extend "css"}}
<link rel="stylesheet" href="/css/order-filters.css">
{{/extend}}

<h4>Filter by:</h4>
<div class="panel-group panel-group-filters" id="filters">
  {{! Diet Section }}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelDiet" href="#">
          Special Diets
        </a>
      </h4>
    </div>
    <div id="panelDiet" class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="checkbox">
          <label>
            <input type="checkbox" value="vegetarian" {{#contains orderParams.diets "vegetarian"}}checked="checked"{{/contains}}>
             <span class="tag tag-vegetarian tag-tooltip" data-title="Vegetarian" data-original-title="" title=""></span>
             Vegetarian
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="vegan" {{#contains orderParams.diets "vegan"}}checked="checked"{{/contains}}>
            <span class="tag tag-vegan tag-tooltip" data-title="Vegan" data-original-title="" title=""></span>
            Vegan
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="glutenFree" {{#contains orderParams.diets "glutenFree"}}checked="checked"{{/contains}}>
            <span class="tag tag-gluten-free tag-tooltip" data-title="Gluten-Free" data-original-title="" title=""></span>
            Gluten-Free
          </label>
        </div>
      </div>
    </div>
  </div>

  {{! Cuisine Types }}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelCuisine" href="#">
          Cuisine
        </a>
      </h4>
    </div>
    <div id="panelCuisine" class="panel-collapse collapse {{#if orderParams.cuisines}}in{{/if}}">
      <div class="panel-body">
        {{#each filterCuisines}}
        <div class="checkbox">
          <label><input type="checkbox" value="{{this}}" {{#contains ../orderParams.cuisines this}}checked="checked"{{/contains}}> {{this}}</label>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  {{! Price }}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelPrice" href="#">
          Price
        </a>
      </h4>
    </div>
    <div id="panelPrice" class="panel-collapse collapse {{#if orderParams.prices}}in{{/if}}">
      <div class="panel-body">
        {{#each filterPrices}}
        <div class="checkbox">
          <label>
            <input type="checkbox" value="{{this}}" {{#contains ../orderParams.prices this}}checked="checked"{{/contains}}>
            <span class="dollar-meter">{{{dollarMeter this}}}</span>
          </label>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>