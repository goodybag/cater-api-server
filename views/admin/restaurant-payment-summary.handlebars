{{#extend "body"}}
<div class="container page-header">
  <h1 class="page-title">{{restaurant.name}}</h1>
  <h2 class="page-sub-title">Payment Summary #{{payment_summary_id}}</h2>
  <ul class="header-nav">
    <li>
      <button id="create-payment-summary-btn" class="btn btn-default">Create new Item</button>
    </li>
    <li>
      <button id="create-payment-summary-btn" class="btn btn-danger">Delete Summary</button>
    </li>
  </ul>
</div>

<div class="container page-content">
  <table class="table table-striped" id="payment-summary-items-table"></table>
</div>
{{/extend}}

{{#extend "scripts"}}
<script>
  define(
    'data/payment-summary'
  , ['app/models/payment-summary']
  , function( PaymentSummary ){
      return new PaymentSummary({ id: {{payment_summary_id}} });
    }
  );

  define(
    'data/payment-summary-items'
  , ['app/collections/payment-summary-items']
  , function( PaymentSummaryItems ){
      return new PaymentSummaryItems({
        payment_summary_id: {{payment_summary_id}}
      , restaurant_id:      {{restaurant.id}}
      });
    }
  );

  require( ['app/pages/restaurant-payment-summaries'], function( page ){
    page.init();
  });
</script>
{{/extend}}