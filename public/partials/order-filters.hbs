{{#extend "css"}}
<link rel="stylesheet" href="/css/order-filters.css">
{{/extend}}

<h4>Filter by:</h4>
<div class="panel-group panel-group-filters" id="filters">
  {{! Diet Section }}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelDiet" href="#">
          Special Diets
        </a>
      </h4>
    </div>
    <div id="panelDiet" class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="checkbox">
          <label>
            <input type="checkbox" value="vegetarian" {{#contains orderParams.diet "vegetarian"}}checked="checked"{{/contains}}>
             <span class="tag tag-vegetarian tag-tooltip" data-title="Vegetarian" data-original-title="" title=""></span>
             Vegetarian
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="vegan" {{#contains orderParams.diet "vegan"}}checked="checked"{{/contains}}>
            <span class="tag tag-vegan tag-tooltip" data-title="Vegan" data-original-title="" title=""></span>
            Vegan
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="glutenFree" {{#contains orderParams.diet "glutenFree"}}checked="checked"{{/contains}}>
            <span class="tag tag-gluten-free tag-tooltip" data-title="Gluten-Free" data-original-title="" title=""></span>
            Gluten-Free
          </label>
        </div>
      </div>
    </div>
  </div>

  {{! Cuisine Types }}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelCuisine" href="#">
          Cuisine
        </a>
      </h4>
    </div>
    <div id="panelCuisine" class="panel-collapse collapse {{#if orderParams.cuisine}}in{{/if}}">
      <div class="panel-body">
        <div class="checkbox">
          <label><input type="checkbox" value="american" {{#contains orderParams.cuisine "american"}}checked="checked"{{/contains}}> American</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="burgers" {{#contains orderParams.cuisine "burgers"}}checked="checked"{{/contains}}> Burgers</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="bbq" {{#contains orderParams.cuisine "bbq"}}checked="checked"{{/contains}}> BBQ</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="sandwiches" {{#contains orderParams.cuisine "sandwiches"}}checked="checked"{{/contains}}> Sandwiches</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="salads" {{#contains orderParams.cuisine "salads"}}checked="checked"{{/contains}}> Salad</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="chinese" {{#contains orderParams.cuisine "chinese"}}checked="checked"{{/contains}}> Chinese</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="japanese" {{#contains orderParams.cuisine "japanese"}}checked="checked"{{/contains}}> Japanese</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="thai" {{#contains orderParams.cuisine "thai"}}checked="checked"{{/contains}}> Thai</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="italian" {{#contains orderParams.cuisine "italian"}}checked="checked"{{/contains}}> Italian</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="pizza" {{#contains orderParams.cuisine "pizza"}}checked="checked"{{/contains}}> Pizza</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="indian" {{#contains orderParams.cuisine "indian"}}checked="checked"{{/contains}}> Indian</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="texMex" {{#contains orderParams.cuisine "texMex"}}checked="checked"{{/contains}}> Tex-Mex</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="mexican" {{#contains orderParams.cuisine "mexican"}}checked="checked"{{/contains}}> Mexican</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="mediterranean" {{#contains orderParams.cuisine "mediterranean"}}checked="checked"{{/contains}}> Mediterranean</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="deserts" {{#contains orderParams.cuisine "deserts"}}checked="checked"{{/contains}}> Deserts</label>
        </div>
      </div>
    </div>
  </div>

  {{! Price }}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelPrice" href="#">
          Price
        </a>
      </h4>
    </div>
    <div id="panelPrice" class="panel-collapse collapse {{#if orderParams.price}}in{{/if}}">
      <div class="panel-body">
        <div class="checkbox">
          <label><input type="checkbox" value="1" {{#contains orderParams.price "1"}}checked="checked"{{/contains}}> $</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="2" {{#contains orderParams.price "2"}}checked="checked"{{/contains}}> $$</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="3" {{#contains orderParams.price "3"}}checked="checked"{{/contains}}> $$$</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="4" {{#contains orderParams.price "4"}}checked="checked"{{/contains}}> $$$$</label>
        </div>
      </div>
    </div>
  </div>

</div>