<!DOCTYPE html>
<html>
  <head>
    <title>Goodybag</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/dist/css/base.min.css" rel="stylesheet" media="screen">
    <!--[if lte IE 9]>
    <link rel="stylesheet" href="/css/ie-lte-9.css">
    <![endif]-->

    {{{block "css"}}}
  </head>
  <body>
    <header id="header" class="navbar">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <a class="navbar-brand" href="/">
              <img src="/img/logo.png" alt="Goodybag">
            </a>
            {{#if user.id}}
            <div class="btn-group pull-right">
              <button class="btn btn-default navbar-btn dropdown-toggle pull-right" data-toggle="dropdown">
                My Account <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a href="/users/me">My Settings</a></li>
                <li><a href="/users/me/orders">My Orders</a></li>
                <li><a href="/auth/logout">Logout</a></li>
              </ul>
            </div>
            {{/if}}
            <span class="header-info">
              <span class="contact-us">Contact Us:</span>
              <strong class="phone-number">{{phoneNumber config.phone.support }}</strong>
            </span>
          </div>
        </div>
      </div>
    </header>

    {{{block "banner"}}}

    <div id="main">
      {{{body}}}
    </div>

    <footer id="footer">
      <ul class="footer-nav">
        <li>
          <a href="/contact-us">Contact Us</a>
        </li>
        <li>
          <a href="/legal">Terms of Service</a>
        </li>
        <li>
          <a href="/privacy">Privacy Policy</a>
        </li>
      </ul>
    </footer>

    <script src="/dist/js/base.min.js"></script>
    <script>
    $.ajax({
      type: "GET",
      url: "/components/moment-timezone/moment-timezone.json",
      dataType: "json",
      async: false,
      success: function(data) {
        moment.tz.add(data);
      }
    });
    </script>
    <script>
      for (var key in helpers) {
        Handlebars.registerHelper(key, helpers[key]);
      }
    </script>

    {{{block "templates"}}}

    <script src="/dist/js/mvc.min.js"></script>

    {{{block "views"}}}
    {{{block "scripts"}}}

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-23372459-3', 'goodybag.com');
      ga('send', 'pageview');
    </script>
  </body>
</html>
