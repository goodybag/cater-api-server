{{!-- 
The "Share Link" panel can be in one of these states:
  * Hidden if there's no order
  * Display Share Order button if token is missing
  * Share link URL view if token is present
--}}
<div class="panel menu-share-link {{#eq order.id "undefined"}}hide{{/eq}}">
  <div class="panel-body">
    <div class="panel-title">Share link</div>
    <section class="generate-token-view {{#if order.edit_token}}hide{{/if}}">
      <button class="btn btn-primary btn-generate-token">Share this order</button>
    </section>
    <section class="share-link-view {{#unless order.edit_token}}hide{{/unless}}">
      <p class="description">Send to others so they can add items too!</p>
      <div class="form-group">
        <input class="form-control share-link" type="text" value="{{config.baseUrl}}/restaurants/{{restaurant.id}}?edit_token={{order.edit_token}}">
      </div>
      <a class="learn-more" data-toggle="popover" href="#">Learn more</a>
    </section>
  </div>
</div>
