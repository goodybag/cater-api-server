<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <Say voice="woman">
    Hello.
    You have received a new Goodybag order for ${{dollars order.restaurant_total}}
    {{#eq order.type 'pickup'}}
    for pickup at {{formatDateTime order.pickup_datetime "MM/DD/YYYY h:mm a"}}.
    {{/eq}}
    {{#eq order.type 'courier'}}
    for pickup at {{formatDateTime order.pickup_datetime "MM/DD/YYYY h:mm a"}}.
    {{/eq}}
    {{#eq order.type 'delivery'}}
    to be delivered {{formatDateTime order.datetime "MM/DD/YYYY h:mm a"}}.
    {{/eq}}
    Please check your email for a link to accept or reject the order.
    Goodbye.</Say>
</Response>
