{{#extend "css"}}
<link rel="stylesheet" href="/css/restaurant-filters.css">
{{/extend}}

<h4>Filter by:</h4>
<div class="panel-group panel-group-filters" id="filters">
  {{! Diet Section }}
  <div class="panel panel-default" data-facet="tags">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelDiet" href="javascript:void(0)">
          <span class="glyphicon glyphicon-chevron-right pull-right"></span> Special Diets
        </a>
      </h4>
    </div>
    <div id="panelDiet" class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="checkbox">
          <label>
            <input type="checkbox" value="glutenFree" {{#contains orderParams.diets "glutenFree"}}checked="checked"{{/contains}}>
            <span class="tag tag-gluten-free tag-tooltip" data-title="Gluten-Free" data-original-title="" title=""></span>
            Gluten-Free
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="dairyFree" {{#contains orderParams.diets "dairyFree"}}checked="checked"{{/contains}}>
            <span class="tag tag-dairy-free tag-tooltip" data-title="Dairy-Free" data-original-title="" title=""></span>
            Dairy-Free
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="vegetarian" {{#contains orderParams.diets "vegetarian"}}checked="checked"{{/contains}}>
             <span class="tag tag-vegetarian tag-tooltip" data-title="Vegetarian" data-original-title="" title=""></span>
             Vegetarian
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="vegan" {{#contains orderParams.diets "vegan"}}checked="checked"{{/contains}}>
            <span class="tag tag-vegan tag-tooltip" data-title="Vegan" data-original-title="" title=""></span>
            Vegan
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="halal" {{#contains orderParams.diets "halal"}}checked="checked"{{/contains}}>
            <span class="tag tag-halal tag-tooltip" data-title="Halal" data-original-title="" title=""></span>
            Halal
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="kosher" {{#contains orderParams.diets "kosher"}}checked="checked"{{/contains}}>
            <span class="tag tag-kosher tag-tooltip" data-title="Kosher" data-original-title="" title=""></span>
            Kosher
          </label>
        </div>
      </div>
    </div>
  </div>

  {{! Cuisine Types }}
  <div class="panel panel-default" data-facet="cuisine">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelCuisine" href="javascript:void(0)">
          <span class="glyphicon glyphicon-chevron-down pull-right"></span> Cuisine
        </a>
      </h4>
    </div>
    <div id="panelCuisine" class="panel-collapse collapse {{#if orderParams.cuisines}}in{{/if}}">
      <div class="panel-body">
        {{#each filterCuisines}}
        <div class="checkbox">
          <label><input type="checkbox" value="{{this}}" {{#contains ../orderParams.cuisines this}}checked="checked"{{/contains}}> {{this}}</label>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  {{! Meal Types }}
  <div class="panel panel-default" data-facet="meal_types">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelMealTypes" href="javascript:void(0)">
          <span class="glyphicon glyphicon-chevron-down pull-right"></span> Meal Types
        </a>
      </h4>
    </div>
    <div id="panelMealTypes" class="panel-collapse collapse {{#if orderParams.mealTypes}}in{{/if}}">
      <div class="panel-body">
        {{#each filterMealTypes}}
        <div class="checkbox">
          <label><input type="checkbox" value="{{name}}" {{#contains ../orderParams.mealTypes name}}checked="checked"{{/contains}}> {{name}}</label>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  {{! Price }}
  <div class="panel panel-default" data-facet="prices">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelPrice" href="javascript:void(0)">
          <span class="glyphicon glyphicon-chevron-down pull-right"></span> Price
        </a>
      </h4>
    </div>
    <div id="panelPrice" class="panel-collapse collapse {{#if orderParams.prices}}in{{/if}}">
      <div class="panel-body">
        {{#each filterPrices}}
        <div class="checkbox">
          <label>
            <input type="checkbox" value="{{this}}" {{#contains ../orderParams.prices this}}checked="checked"{{/contains}}>
            <span class="dollar-meter">{{{dollarMeter this}}}</span>
          </label>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  {{! Serving Style }}
  <div class="panel panel-default" data-facet="meal_styles">
    <div class="panel-heading">
      <h4>
        <a class="accordion-toggle" data-toggle="collapse" data-target="#panelMealStyles" href="javascript:void(0)">
          <span class="glyphicon glyphicon-chevron-down pull-right"></span> Serving Style
        </a>
      </h4>
    </div>
    <div id="panelMealStyles" class="panel-collapse collapse {{#if orderParams.mealStyles}}in{{/if}}">
      <div class="panel-body">
        {{#each filterMealStyles}}
        <div class="checkbox">
          <label>
            <input type="checkbox" value="{{name}}" {{#contains ../orderParams.mealStyles name}}checked="checked"{{/contains}}>
            {{name}}
          </label>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>

<div class="restaurant-favorites" id="favorites">
  <label for="favorite-toggle">Show Favorites</label>
  <button
    class="btn btn-favorite {{#eq orderParams.favorites "true"}}active{{/eq}}"
    id="favorite-toggle"
    data-icon="gb-icon-heart">
  </button>
</div>
