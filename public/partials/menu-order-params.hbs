<div class="panel menu-order-params">
  <div class="panel-body">
    <div class="panel-title">Your order is for:</div>
    {{#with order}}
    <dl>
      <dt>Zip:</dt>
      <dd>{{#if zip}}{{zip}}{{else}}--{{/if}}</dd>
      <dt>Date:</dt>
      <dd>{{#if datetime}}{{datepart datetime}}{{else}}--{{/if}}</dd>
      <dt>Time:</dt>
      <dd>{{#if datetime}}{{timepart datetime}}{{else}}--{{/if}}</dd>
      <dt>Guests:</dt>
      <dd>{{#if guests}}{{guests}}{{else}}--{{/if}}
        {{!-- Don't let shared link change params --}}
        <a class="btn-change-order-params pull-right {{#eq ../edit_token edit_token}}hide{{/eq}}" href="#">Change</a>
      </dd>
    </dl>
    {{/with}}
  {{> menu_share_link }}
  </div>
</div>
