{{#extend "page"}}page-restaurant-payments{{/extend}}

{{#extend "body"}}
  <h2>Make a payment</h2>
  <form class="form-restaurant-payments">
    <div class="form-group">
      <div class="input-group input-group">
        <div class="input-addon">$</div>
        <input type="number" step="0.01" placeholder="10.50" class="input-amount form-control">
      </div>
    </div>
    <button class="btn btn-primary">Pay Now</button>
  </form>

  <div class="table-list table-restaurant-payments">
    <div class="list-header">
      <div class="component list-info">
        <div class="num-results">Past Payments</div>
      </div>
    </div>

        <div class="list-items">
          <div class="list-item">
            <label class="component item-selector">
              <input type="checkbox">
            </label>
            <div class="component main">
              <a class="item-title" href="#">Order</a>
              <div class="item-details">#100 Austin, TX</div>
            </div>
          </div>
          <div class="list-item">
            <label class="component item-selector">
              <input type="checkbox">
            </label>
            <div class="component main">
              <a class="item-title" href="#">All-Star Burger</a>
