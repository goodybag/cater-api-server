<div class="panel-heading">
  <h3 class="panel-title">Category</h3>
  <form class="form-inline category-form row">
    <div class="form-group col-lg-2">
      <label class="control-label">Order</label>
      <input type="number" value="{{this.order}}" class="form-control category-order">
    </div>
    <div class="form-group col-lg-3">
      <label class="control-label">Name</label>
      <input type="text" value="{{this.name}}" class="form-control category-name">
    </div>
    <div class="form-group col-lg-4">
      <label class="control-label">Description</label>
      <textarea class="form-control category-description">{{this.description}}</textarea>
    </div>
    <div class="form-group col-lg-2">
      <label class="control-label">Type</label>
      <div class="row">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="categoryTypes" class="category-types" value="group" {{#eq this.category_type "group"}}checked{{/eq}}>
            Group
          </label>
        </div>
      </div>
      <div class="row">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="categoryTypes" class="category-types" value="individual" {{#eq this.category_type "individual"}}checked{{/eq}}>
            Individual
          </label>
        </div>
      </div>
    </div>
    <div class="btn-toolbar col-lg-3 category-buttons">
      <button type="button" class="btn btn-default category-copy">Copy</button>
      <button type="button" class="btn btn-danger category-remove">Remove</button>
      <button type="submit" class="btn btn-success category-save hide">Save</button>
    </div>
  </form>
</div>
<table class="table table-striped">
  <caption>Items</caption>
  <thead>
    <th class="order-column">Order</th>
    <th class="name-column">Name</th>
    <th class="price-column">Price</th>
    <th class="feeds-min-column">Feeds Min</th>
    <th class="feeds-max-column">Feeds Max</th>
    <th class="description-column">Description</th>
    <th class="tags-column">Tags</th>
  </thead>
  <tbody>
    {{#each items}}
    <tr id="edit-item-{{this.id}}">
      {{> edit_item_row}}
    </tr>
    {{/each}}
  </tbody>
</table>
<div class="panel-footer">
  <div class="row">
    <div class="bnt-toolbar col-lg-1 col-lg-offset-11">
      <button type="button" class="btn btn-primary new-item pull-right">New Item</button>
    </div>
  </div>
</div>
