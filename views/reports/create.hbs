<div class="container">
  <h1>Reports</h1>
  <form method="POST" action="/reports/orders">
    <legend>List orders</legend>

    <label>Status</label>
    <select name="status">
      <option value="pending">Pending</option>
      <option value="submitted">Submitted</option>
      <option value="canceled">Canceled</option>
      <option value="accepted" selected>Accepted</option>
      <option value="denied">Denied</option>
    </select>

    <label>By</label>
    <select name="range">
      <option value="datetime">Delivery Date</option>
      <option value="submitted">Date Submitted</option>
    </select>

    <label>Sort</label>
    <select name="sort">
      <option value="asc">Ascending</option>
      <option value="desc">Descending</option>
    </select>

    <label>Start</label>
    <input class="datepicker" name="start">

    <label>End</label>
    <input class="datepicker" name="end">

    <button class="btn btn-primary" type="submit">Generate .csv</button>
  </form>

  <form method="POST" action="/reports/users">
    <legend>List users by register date</legend>

    <label>Start</label>
    <input class="datepicker" name="start">

    <label>End</label>
    <input class="datepicker" name="end">

    <button class="btn btn-primary" type="submit">Generate</button>
  </form>
</div>

{{#extend "scripts"}}
<script>
  require([
      'utils'
    ]
  , function(utils) {
      $('.datepicker').pickadate({
        format: 'mm-dd-yyyy'
      });
    }
  );
</script>
{{/extend}}
