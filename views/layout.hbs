<!DOCTYPE html>
<html>
  <head>
    <title>Goodybag</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="/components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" media="screen">

    <!-- Fonts -->
    <link href="/css/gb-icon.css" rel="stylesheet">
    <link href="/css/aleo.css" rel="stylesheet">
    <link href="/css/proxima-nova.css" rel="stylesheet">

    <!-- pickadate -->
    <link href="/components/lalitkapoor-pickadate/lib/themes/classic.css" rel="stylesheet">
    <link href="/components/lalitkapoor-pickadate/lib/themes/classic.date.css" rel="stylesheet">
    <link href="/components/lalitkapoor-pickadate/lib/themes/classic.time.css" rel="stylesheet">


    <!-- Moar Convenient CSS Stuff -->
    <link href="/css/kit.css" rel="stylesheet">

    <!-- Goodybag Catering CSS Stuff -->
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/components.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">

    <!--[if lte IE 9]>
    <link rel="stylesheet" href="/css/ie-lte-9.css">
    <![endif]-->

    {{{block "css"}}}
  </head>
  <body>
    <header id="header" class="navbar">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <a class="navbar-brand" href="/">
              <img src="/img/logo.png" alt="Goodybag">
            </a>
            {{#if user.id}}
            <div class="btn-group pull-right">
              <button class="btn btn-default navbar-btn dropdown-toggle pull-right" data-toggle="dropdown">
                My Account <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a href="/users/me">My Settings</a></li>
                <li><a href="/users/me/orders">My Orders</a></li>
                <li><a href="/auth/logout">Logout</a></li>
              </ul>
            </div>
            {{/if}}
            <span class="header-info">
              Contact Us: <strong class="phone-number">{{phoneNumber config.phone.support }}</strong>
            </span>
          </div>
        </div>
      </div>
    </header>

    {{{block "banner"}}}

    <div id="main">
      {{{body}}}
    </div>

    <footer id="footer">
      <ul class="footer-nav">
        <li>
          <a href="/contact-us">Contact Us</a>
        </li>
        <li>
          <a href="/legal">Terms of Service</a>
        </li>
        <li>
          <a href="/privacy">Privacy Policy</a>
        </li>
      </ul>
    </footer>

    <script src="/components/jquery/jquery.min.js"></script>
    <script src="/components/amanda/releases/latest/amanda.min.js"></script>
    <script src="/components/select2/select2.min.js"></script>
    <script src="/components/async/lib/async.js"></script>
    <script src="/components/underscore/underscore-min.js"></script>
    <script src="/components/backbone/backbone-min.js"></script>
    <script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- pickadate -->
    <script src="/components/lalitkapoor-pickadate/lib/picker.js"></script>
    <script src="/components/lalitkapoor-pickadate/lib/picker.date.js"></script>
    <script src="/components/lalitkapoor-pickadate/lib/picker.time.js"></script>
    <script src="/components/lalitkapoor-pickadate/lib/legacy.js"></script>

    <!-- moment -->
    <script src="/components/moment/min/moment.min.js"></script>
    <script src="/components/moment-timezone/min/moment-timezone.min.js"></script>
    <script>
    $.ajax({
      type: "GET",
      url: "/components/moment-timezone/moment-timezone.json",
      dataType: "json",
      async: false,
      success: function(data) {
        moment.tz.add(data);
      }
    });
    </script>

    <!-- handlebars -->
    <script src="/components/handlebars/handlebars.js"></script>
    <script src="/js/hb-helpers.js"></script>
    <script>
      for (var key in helpers) {
        Handlebars.registerHelper(key, helpers[key]);
      }
    </script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-23372459-3', 'goodybag.com');
      ga('send', 'pageview');
    </script>

    {{{block "views"}}}
    {{{block "scripts"}}}
  </body>
</html>
