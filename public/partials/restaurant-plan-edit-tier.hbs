<div class="tier">
  <div class="form-group">
    <label class="control-label" for="input-amount">
      <span class="amount-text">
        <span class="under">Under</span>
        <span class="over">Over</span>
      </span>
      <span class="help-block">Required</span>
    </label>
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        name="amount"
        id="input-amount"
        data-in="dollars"
        data-out="pennies"
        value="{{#if amount}}{{dollars amount}}{{/if}}">
      <div class="input-addon">$</div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="input-fee">
      Rate
      <span class="help-block">Required</span>
    </label>
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        name="fee"
        id="input-fee"
        data-in="factorToPercent"
        data-out="percentToFactor 4"
        value="{{#if this.fee}}{{factorToPercent this.fee}}{{/if}}">
      <div class="input-addon">%</div>
    </div>
  </div>
  <div class="form-group actions">
    <label>&nbsp;</label>
    <button
      class="btn btn-default btn-small"
      type="button"
      data-role="remove">x</button>
  </div>
</div>