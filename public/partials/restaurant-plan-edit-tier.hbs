<div class="tier">
  <div class="form-group">
    <label class="control-label" for="input-rate">
      <span class="amount-text"></span> ${{dollars amount}}
      <span class="help-block">Required</span>
    </label>
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        name="rate"
        id="input-rate"
        data-in="factorToPercent"
        data-out="percentToFactor 4"
        value="{{#if this.rate}}{{factorToPercent this.rate}}{{/if}}">
      <div class="input-addon">%</div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label" for="input-rate">
      Rate
      <span class="help-block">Required</span>
    </label>
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        name="rate"
        id="input-rate"
        data-in="factorToPercent"
        data-out="percentToFactor 4"
        value="{{#if this.rate}}{{factorToPercent this.rate}}{{/if}}">
      <div class="input-addon">%</div>
    </div>
  </div>
  <div class="form-group actions">
    <label>&nbsp;</label>
    <button class="btn btn-default btn-small" data-role="remove">x</button>
  </div>
</div>