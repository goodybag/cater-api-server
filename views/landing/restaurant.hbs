<section class="page-section" id="section-intro-signup">
  <div class="container">
    <h1 class="section-header">More Orders Instantly</h1>
    <div class="alert alert-success alert-dismissable hide" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Thanks for submitting your info!</strong> Someone will contact you within the next few days.
    </div>
    <div class="alert alert-error alert-dismissable hide" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Whoops!</strong> Something went wrong on our end.
    </div>
    <div class="signup-info-wrapper">
      <div class="signup-col">
        <div class="inner">
          {{#if restaurant_requests}}
          <h3>Thanks!</h3>
          <p>We'll be in touch soon :)</p>
          {{else}}
          <h3>Be a Goodybag caterer</h3>
          <p>Enter your info and we'll get in touch soon!</p>
          {{/if}}
