<div class="order-params-bar panel">
  <form class="form-inline">
    <div class="form-group form-group-title">
      <strong class="form-title">Find Catering</strong>
    </div>

    <div class="form-group" data-icon="gb-icon-location">
      <input list="zips" type="text" class="form-control form-control-zip" name="zip" placeholder="zip" maxlength="5" value="{{#if orderParams}}{{orderParams.zip}}{{/if}}"/>
      <datalist id="zips">
        {{#if defaultAddress }}
        <option value="{{defaultAddress.zip}}">Your Default Address</option>
        {{/if}}
        {{#each order.restaurant.delivery_zips}}
        <option value="{{this}}">
        {{/each}}
      </datalist>
    </div>

    <div class="form-group" data-icon="gb-icon-calendar">
      <input type="text" class="form-control" name="date" placeholder="delivery date" maxlength="10" value="{{#if orderParams}}{{formatDateTime orderParams.date}}{{/if}}"/>
    </div>

    <div class="form-group" data-icon="gb-icon-time">
      <input type="text" class="form-control" name="time" placeholder="delivery time" maxlength="8" value="{{#if orderParams}}{{formatTime orderParams.time}}{{/if}}"/>
    </div>

    <div class="form-group" data-icon="gb-icon-user">
      <input type="text" class="form-control form-control-guests" name="guests" placeholder="guests" maxlength="4" value="{{#if orderParams}}{{orderParams.guests}}{{/if}}"/>
    </div>

    <a href="/restaurants{{queryParams orderParams}}" data-base-url="/restaurants" class="btn btn-primary btn-search">
      Search <i class="btn-search-icon gb-icon-magnifier"></i>
    </a>
  </form>
</div>