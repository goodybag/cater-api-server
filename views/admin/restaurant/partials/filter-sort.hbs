<span class="popover-wrapper table-list-popover-wrapper">
  <a href="#" data-role="popover" data-target="sort-modal">
    Sort <span class="gb-icon-caret-down va-middle"></span>
  </a>
  <div class="popover-modal popover-modal-right sort-modal">
    <div class="popover-header">
      Sort by<span class="popover-close-btn gb-icon-x-mark pull-right" data-toggle-role="close"></span>
    </div>
    <div class="popover-body">
      {{#each filters.sort}}
      <a class="popover-item" href="?q={{this.qs}}">
        <span class="popover-item-icon">{{#if active}}<span class="gb-icon-checkmark va-middle"></span>{{/if}}</span>
        <span class="popover-item-label">{{name}}</span>
      </a>
      {{/each}}
    </div>
  </div>
</span>
