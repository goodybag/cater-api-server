{{! Displays map and restaurant contact info }}
{{#with restaurant}}
<div class="restaurant-map-container">
  <ul class="list-group">

    {{! Restaurant Map }}
    <li class="list-group-item no-padding">
      <div class="restaurant-map"></div>
    </li>

    {{! Restaurant Contact Info }}
    <li class="list-group-item clearfix">

      {{! Left column }}
      <div class="col-half">
        <dl class="dl-stacked">
          <dt>Address:</dt>
          <dd>
            <div>{{street}}</div>
            <div>{{street2}}</div>
            <div>{{city}}, {{state}} {{zip}}</div>
          </dd>
          {{#if websites}}
          <dt>Website:</dt>
          <dd>
            {{#each websites}}
            <div><a href="{{website this}}">{{website this}}</a></div>
            {{/each}}
          </dd>
          {{/if}}
        </dl>
      </div>

      {{! Right column }}
      <div class="col-half">
        {{#if display_phone}}
        <dl class="dl-stacked">
          <dt>Phone:</dt>
          <dd>{{phoneNumber display_phone}}</dd>
        </dl>
        {{/if}}
      </div>
    </li>
  </ul>
</div>
{{/with}}
