{{#extend "page"}}page-rewards{{/extend}}

{{#extend "body"}}
<!--<Navbar>-->
<header class="navbar collapsed">
  <div class="container">
    <a href="/">
      <img src="{{cdn "/img/logo.png"}}" alt="Goodybag.com" class="navbar-logo">
    </a>

    {{#if user.id}}
      <button class="navbar-toggle btn btn-default" data-icon="gb-icon-hamburger"></button>
      <ul class="nav navbar-nav navbar-right">
        {{#contains user.groups 'restaurant'}}
          <li><a href="/restaurants/manage" class="btn-link">Home</a></li>
        {{/contains}}
        {{#if session.oldUser}}
        <li>
          <a href="/users/return" class="users-return navbar-btn">
            Return to {{session.oldUser.name}}
          </a>
        </li>
        {{/if}}
        {{{block "navbar-links"}}}
        <li class="nav-account dropdown">
          <button class="btn btn-default navbar-btn dropdown-toggle pull-right" data-toggle="dropdown">
            {{#if user.name }} {{ user.name }} {{else}} My Account {{/if}} <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="/users/me">My Settings</a></li>
            <li><a href="/users/me/orders">My Orders</a></li>
            <li><a href="/users/me/rewards">My Rewards</a></li>
            <li><a href="/auth/logout">Logout</a></li>
            {{#contains user.groups 'restaurant'}}
              <li><a href="/restaurants/manage" class="btn-link">Home</a></li>
            {{else}}
              <li><a href="/restaurants" class="btn-link">Home</a></li>
            {{/contains}}
          </ul>
        </li>
      </ul>

      <a href="/users/me/rewards" class="gb-points-indicator">
        <div class="points-wrapper">
          {{#if user.points}}
            {{user.points}}
          {{else}}
            0
          {{/if}}
        </div>
      </a>
    {{else}}
      <button class="navbar-toggle btn btn-default">Sign In</button>
      <form class="login-form form-small" method="POST" action="/login{{queryParams query}}">
        <div class="form-group">
          <label for="login-email">Email</label>
          <label for="remember-me" class="remember-me">
            <input type="checkbox" name="remember" value="1" id="remember-me" tabindex="3">
            Remember me
          </label>
          <input type="email" name="email" id="login-email" placeholder="Email" tabindex="1">
        </div>

        <div class="form-group">
          <a href="/forgot-password" class="forgot-password">Forgot password?</a>
          <label for="login-password">Password</label>
          <input type="password" name="password" id="login-password" placeholder="Password" tabindex="2">
        </div>

        <div class="form-group form-group-submit">
          <button class="btn btn-default" tabindex="4">Sign In</button>
        </div>
      </form>
    {{/if}}
  </div>
</header>
<!--</Navbar>-->

<!--<HeroUnit>-->
<div class="hero-unit hero-unit-rewards" id="intro">
  <div class="container">
    <h1>Rewards are here</h1>
    <p>Earn points on every order!</p>
    <img class="rewards-logo" src="{{cdn "/img/goodycoin_188x188.png"}}" alt="Goodybag Rewards">
  </div>
</div>
<!--</HeroUnit>-->

<!--<How it Works>-->
<section class="page-section" id="section-how-it-works">
  <div class="container">
    <h1 class="section-header">How it works</h1>

    <div class="marketing-points">
      <div class="point">
        <img src="{{cdn "/img/rewards-hiw-1.png"}}" alt="">
        <p>
          Order food through Goodybag
        </p>
      </div>
      <div class="point">
        <img src="{{cdn "/img/rewards-hiw-2.png"}}" alt="">
        <p>
          Every dollar spent earns 1 Reward Point
        </p>
      </div>
      <div class="point">
        <img src="{{cdn "/img/rewards-hiw-3.png"}}" alt="">
        <p>
          Redeem Points for Rewards through our online shop!
        </p>
      </div>
    </div>
  </div>
</section>
<!--</How it Works>-->

<!--<Rewards Screen>-->
<section class="page-section" id="section-rewards-screen">
  <div class="container">
    <h1 class="section-header">View your points, browse and redeem rewards!</h1>

    <!--<WindowPane>-->
    <div class="screenshot-window window-pane">
      <div class="window-header">
        <i class="window-btn"></i>
        <i class="window-btn"></i>
        <i class="window-btn"></i>
      </div>
      <img src="{{cdn "/img/rewards-screenshot.png"}}" alt="Goodybag rewards">
    </div>
    <!--</WindowPane>-->
  </div>
</section>
<!--</Rewards Screen>-->

<!--<FAQsSection>-->
<section class="page-section" id="section-faqs">
  <div class="container">
    <h1 class="section-header">FAQs</h1>

    <!--<FAQs>-->
    <div class="faqs">
      <article class="faq">
        <h1>What are Actual Points vs Pending Points?</h1>
        <p>Actual Points can be redeemed for rewards while Pending Points cannot. Pending Points represent orders that have not yet been fulfilled. Actual Points represent fulfilled orders.</p>
      </article>

      <article class="faq">
        <h1>How will I receive my card?</h1>
        <p>We will deliver the card to your location. After redeeming a card you will receive a confirmation email from us. Note that delivery may take up to two weeks.</p>
      </article>

      <article class="faq">
        <h1>What can I redeem My Points for?</h1>
        <p>Currently we are offering gift cards from Amazon &amp; Starbucks in values of $10, $20 and $50 respectively.</p>
      </article>

      <article class="faq">
        <h1>How do I enroll?</h1>
        <p>You're already enrolled! Click your name in the top right corner then select My Rewards from the drop down to access your Rewards Page.</p>
      </article>

      <article class="faq">
        <h1>Will I be credited for previous orders made on my account?</h1>
        <p>Sorry but only orders made after the launch of our Rewards Program accrue Reward Points.</p>
      </article>
    </div>
    <!--</FAQs>-->
  </div>
</section>
<!--</FAQsSection>-->
{{/extend}}

{{#extend "scripts"}}
<script>
  require( ['jquery', 'navbar'], function( $ ){
    $('.navbar').navbar({ toggleText: false });
  });

  analytics.page('Rewards');
</script>
{{/extend}}
