<thead>
  <tr>
    <th>Recipients</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  {{#each items}}
  <tr id="notification-{{this.cid}}">
    <td>{{{list this.email.to}}}</td>
    <td>{{this.name}}</td>
    <td class="actions">
      {{#if this.requiredOptions}}
      <button
        class="btn btn-small btn-default btn-options btn-icon btn-toggle"
        data-cid="{{this.cid}}"
        data-toggle="-">+</button>
      {{/if}}
      <a href="{{this.email.url}}" target="_blank" class="btn btn-small btn-default btn-preview">Preview</a>
      <button class="btn btn-small btn-primary">Send</button>
    </td>
  </tr>
  {{/each}}
</tbody>