{{#extend "page"}}page-register{{/extend}}

{{#extend "css"}}
<style>
  .form-restaurant-signup {
    margin: 0 auto;
    max-width: 500px;
  }
</style>
{{/extend}}

{{#extend "body"}}

<!-- TODO: add styles -->
<nav>
  <ol class="inline-list">
    <li class="active">Basic Info</li>
    <li class="">Restaurant Info</li>
    <li class="">Delivery + Pickup</li>
    <li class="">Payments</li>
  </ol>
</nav>

<!-- TODO: move to basic-info partial -->
<div id="basic-info">
  <div>
    <h1>Start feeding offices</h1>
    <p>Get exposure to hundreds of offices and new customers.</p>
  </div>

  <form class="form-vertical form-restaurant-signup">
    <div class="form-group">
      <label for="name">Your Name</label>
      <input type="text" name="name" id="name">
    </div>
    <div class="form-group">
      <label for="number">Your Number</label>
      <input type="text" name="number" id="number">
    </div>
    <div class="form-group">
      <label for="email">Your Email</label>
      <input type="text" name="email" id="email">
    </div>
    <div class="form-group">
      <label for="restaurant_name">Restaurant Name</label>
      <input type="text" name="restaurant_name" id="restaurant-name">
    </div>
    <div class="form-group">
      <label for="website">Restaurant Website</label>
      <input type="text" name="website" id="website">
    </div>
    <div class="form-group">
      <label for="delivery_type">Which can you provide?</label>
      <ul class="inline-list">
        <li>
          <label>Delivery</label>
          <input type="checkbox">
        </li>
        <li>
          <label>Pickup</label>
          <input type="checkbox">
        </li>
        <li>
          <label>Both</label>
          <input type="checkbox">
        </li>
      </ul>
    </div>
    <div class="form-group">
      <button class="btn btn-default">Continue ></button>
    </div>
  </form>
</div>

{{/extend}}

{{#extend "script"}}
<script>
require([
  'app/pages/restaurant-signup'
  'app/models/restaurant'
], 
function ( page, Restaurant ){
  page.init({
    restaurant: new Restaurant()
  , tab: ''
  });
});
</script>
{{/extend}}
