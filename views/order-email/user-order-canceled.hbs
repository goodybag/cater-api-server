{{#extend "body"}}
  <!--<LeadText>-->
  <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
      <td style="width: 100%; padding-top: 2px; padding-bottom: 32px">
        <h1 style="line-height: 22px; margin-top: 0; margin-right: 0; margin-bottom: 0; margin-left: 0; padding-top: 0; padding-right: 0; padding-bottom: 0; padding-left: 0; font-weight: 300; font-size: 18px; font-family: Helvetica, arial, sans-serif; text-align: center; color: #695a42">
          You canceled Order #{{order.id}}
        </h1>
      </td>
    </tr>
  </table>
  <!--</LeadText>-->

  <!--<BigOlButton>-->
  <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
      <td style="width: 100%; padding-top: 2px; padding-bottom: 32px; font-size: 24px; font-weight: 300; ">
        <a href="{{config.baseUrl}}/orders/{{order.id}}" style="text-decoration: none; color: #ffffff; font-family: Helvetica, arial, sans-serif;">
          <table cellpadding="0" cellspacing="0" style="">
            <tr>
              <td width="50%"></td>
              <td style="padding-top: 12px; padding-right: 36px; padding-bottom: 12px; padding-left: 36px; white-space: nowrap; background: #DC0500; border-radius: 4px; border: solid #B80300 1px; font-family: Helvetica, arial, sans-serif; color: #ffffff">
                <a href="{{config.baseUrl}}/orders/{{order.id}}" style="color: #ffffff; font-size: 24px; text-decoration: none; font-family: Helvetica, arial, sans-serif;">View order</a>
              </td>
              <td width="50%"></td>
            </tr>
          </table>
        </a>
      </td>
    </tr>
  </table>
  <!--</BigOlButton>-->

  <!--<OrderDetails>-->
  <div style="width: 400px; margin: 0 auto;">
  {{#eq order.type 'pickup' }}
    {{> order_email_details_pickup order}}
  {{else}}
    {{> order_email_details_delivery order}}
  {{/eq}}
  </div>
  <!--</OrderDetails>-->

{{/extend}}
