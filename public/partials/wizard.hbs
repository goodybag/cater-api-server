{{#extend "css"}}
<link rel="stylesheet" href="/css/wizard.css">
{{/extend}}

<div class="col-lg-12 text-center">
  <ul class="wizard">
    <li {{#eq step 1}}class="active"{{/eq}}>
      <div class="wizard-step">
        {{#gt step 1}}
          <span class="glyphicon glyphicon-ok"></span>
        {{else}}
          1
        {{/gt}}
      </div>
      Review Order
    </li>
    <li {{#eq step 2}}class="active"{{/eq}}>
      <div class="wizard-step">
        {{#gt step 2}} 
          <span class="glyphicon glyphicon-ok"></span>
        {{else}}
          2
        {{/gt}}
      </div>
      Checkout
    </li>
    <li {{#eq step 3}}class="active"{{/eq}}>
      <div class="wizard-step">3</div>
      Receipt
    </li>
  </ul>
</div>
