<div class="list-tags">
  {{#notEmpty reqQuery}}
  <span> {{../restaurants.length}} result{{#gt ../restaurants.length 1}}s{{/gt}}: </span>
  {{/notEmpty}}

  {{#each searchTags}}
  <a class="search-tag" href="{{baseUrl}}/restaurants{{qs}}">{{ref (formatDietTag text) 'name'}} <span class="gb-icon-x-mark"></span></a>
  {{/each}}

  {{#notEmpty reqQuery}}
  <a class="back-to-results" href="/restaurants">Clear search</a>
  {{/notEmpty}}
</div>
