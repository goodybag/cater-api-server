<script>
  define(
    'item-form'
  , [ 'jquery-loaded', 'app/views/admin/item-form', '{{itemForm.collection}}' ]
  , function( $, FormView, Collection ){
      return new FormView({
        el:     $('{{itemForm.selector}}')
      , model:  new Collection( null, {{{or (json this.itemForm.collectionOptions) "{}"}}})
                  .createModel({{#if itemForm.localModelProp}}{{{json this itemForm.localModelProp}}}{{/if}})
      });
    }
  );

  // No-op require to load in item-form
  require(['item-form'], function(){})
</script>
