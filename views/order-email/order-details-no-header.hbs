<table cellpadding="0" cellspacing="0" style="width: 100%">
  <tr>
    <td class="main-width-constraint">
      <table class="main-width-constraint" cellpadding="0" cellspacing="0" style="width: 100%; background: #ffffff; border: solid #ccccc0 1px; border-radius: 4px">
      <!--<OrderDetailsBody>-->
      {{#if this.user.organization}}
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">Customer Organization:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;">{{this.user.organization}}</td>
      </tr>
      {{/if}}
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">{{#if this.is_pickup}}Pickup{{else}}Delivery{{/if}} Date:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;">{{#if is_pickup}}{{datepart pickup_datetime}}{{else}}{{datepart this.datetime}}{{/if}}</td>
      </tr>
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">{{#if this.is_pickup}}Pickup{{else}}Delivery{{/if}} Time:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;">{{#if is_pickup}}{{timepart pickup_datetime}}{{else}}{{timepart this.datetime}}{{/if}}</td>
      </tr>
      <tr>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 10px; padding-left: 12px; text-align: left">Guests:</td>
        <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px; width: 50%; padding-top: 8px; padding-bottom: 8px; padding-right: 12px; text-align: left;">{{this.guests}}</td>
      </tr>
      <!--</OrderDetailsBody>-->
    </table>
    </td>
  </tr>
</table>
