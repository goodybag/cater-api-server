{{#each options_sets}}
  <fieldset class="item-options-fieldset">
    <legend>{{this.name}}</legend>
    {{#each this.options}}
      <div class="{{#eq ../type 'radio'}}radio{{else}}checkbox{{/eq}}">
        <label>
          {{{dump this}}}
          {{#eq ../type 'radio'}}
          <input
            {{#if ../state}}checked{{/if}}
            {{#if ../default_state}}checked{{/if}}
            type="radio" id="item-option-{{../uuid}}"
            name="{{../../name}}" value="{{../uuid}}"
          >
          {{else}}
          <input
            {{#if ../state}}checked{{/if}}
            {{#if ../default_state}}checked{{/if}}
            type="checkbox" id="item-option-{{../uuid}}"
            name="{{../../name}}" value="{{../uuid}}"
          >
          {{/eq}}

          {{this.name}}

          {{#if this.price}}
          <span class="option-price">(+{{dollars this.price}})</span>
          {{/if}}
        </label>
      </div>
    {{/each}}
  </fieldset>
{{/each}}