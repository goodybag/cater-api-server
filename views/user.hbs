{{#extend "css"}}
<link rel="stylesheet" href="/css/user-settings.css">
{{/extend}}

<div class="container">

  {{#if alert}}
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <strong>Settings Saved!</strong>
    </div>
  {{/if}}

  <h1 class="text-center page-title">Account Settings</h1>
  <div class="row">
    <form class="well col-lg-6  col-lg-offset-3 user-settings-form" action="/users/me" method="post">
        <input type="hidden" name="_method" value="put"/>
        <div class="form-group">
          <label for="input-first-name" class="control-label">First Name</label>
          <input type="text" id="input-first-name" name="first_name" class="form-control first_name col-lg-12" value="{{user.first_name}}">
        </div>
        <div class="form-group">
          <label for="input-last-name" class="control-label">Last Name</label>
          <input type="text" id="input-last-name" name="last_name" class="form-control last_name" value="{{user.last_name}}">
        </div>
        <div class="form-group">
          <label for="input-email" class="control-label">Email</label>
          <input type="email" id="input-email" name="email" class="form-control email" value="{{user.email}}">
        </div>
        <div class="form-group">
          <label for="input-org" class="control-label">Organization</label>
          <input type="text" id="input-org" name="organization" class="form-control organization" value="{{user.organization}}">
        </div>
        <div class="form-group">
          <label for="input-pass1" class="control-label">Password</label>
          <input type="password" name="password" id="input-pass1" class="form-control password">
        </div>
        <div class="form-group">
          <label for="input-pass2" class="control-label">Confirm Password</label>
          <input type="password" id="input-pass2" class="form-control confirm_password">
        </div>
      <button type="submit" class="btn btn-lg btn-primary pull-right">Save</button>
    </form>
  </div>
  
  <h1 class="text-center page-title">Address Book</h1>
  <div class="row">
    <div class="well col-lg-6  col-lg-offset-3 user-settings-form">
      <a href="/users/me/addresses" class="btn btn-primary">Manage Addresses</a>
      <a href="/users/me/addresses#add-new-address" class="btn btn-primary pull-right">Add new address</a>
    </div>
  </div>

</div>

{{#extend "scripts"}}
<script>
  $('.user-settings-form').on('submit', function(e) {
    // Client side validation
    e.preventDefault();
    var fields = ['first_name', 'last_name', 'email', 'organization', 'password'];
    var data = {};
    for (var i=0, l=fields.length; i<l; i++)
      data[fields[i]] = $('.user-settings-form .' + fields[i]).val();
    if (data.password && data.password !== $('.user-settings-form .confirm_password').val())
      return alert('passwords must match');
    if (!data.password) delete data.password;

    this.submit();
  });
</script>
{{/extend}}
