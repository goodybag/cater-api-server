{{#extend "scripts"}}
<script>
  require( [
      'jquery-loaded'
    , 'navbar'
    , 'views/request-to-cater-view'
    ], function ( $, navbar, CaterFormView ){
    $('.navbar').navbar({ toggleText: false });

    var $name             = $('#request-form-full-name');
    var $btn              = $('#section-outro-cta .btn-cta');
    var $scrollToSection  = $( $btn.attr('href') );

    // IE/Firefox not scrolling to the right spot
    var doNotAnimate = [
      /MSIE\s[0-9]/
    , /Firefox/
    ].some( function( r ){
      return r.test( window.navigator.userAgent );
    });

    $btn.click( function( e ){
      if ( doNotAnimate ) return $name.focus();
      e.preventDefault();

      $('body').animate(
        { scrollTop: $scrollToSection.offset().top }
      , $name.focus.bind( $name )
      );
    });

    var formView = new CaterFormView({
      el: '#request-to-cater-form'
    });
  });

  analytics.page('Restaurants Splash');
</script>
