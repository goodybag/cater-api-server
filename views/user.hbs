<form class="form-horizontal col-lg-8">
  <fieldset>
    <legend>User Settings</legend>
    <div class="form-group">
      <label for="input-first-name" class="col-lg-2 control-label">First Name</label>
      <div class="col-lg-10">
        <input type="text" id="input-first-name" class="form-control first-name" value="{{user.first_name}}">
      </div>
    </div>
    <div class="form-group">
      <label for="input-last-name" class="col-lg-2 control-label">Last Name</label>
      <div class="col-lg-10">
        <input type="text" id="input-last-name" class="form-control last-name" value="{{user.last_name}}">
      </div>
    </div>
    <div class="form-group">
      <label for="input-email" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <input type="email" id="input-email" class="form-control email-name" value="{{user.email}}">
      </div>
    </div>
    <div class="form-group">
      <label for="input-org" class="col-lg-2 control-label">Organization</label>
      <div class="col-lg-10">
        <input type="text" id="input-org" class="form-control organization" value="{{user.orginization}}">
      </div>
    </div>
    <div class="form-group">
      <label for="input-pass1" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <input type="text" id="input-pass1" class="form-control pass1">
      </div>
    </div>
    <div class="form-group">
      <label for="input-pass2" class="col-lg-2 control-label">Confirm Password</label>
      <div class="col-lg-10">
        <input type="text" id="input-pass2" class="form-control pass2">
      </div>
    </div>
  </fieldset>
  <button type="submit" class="btn btn-lg btn-primary pull-right">Save</button>
</form>

<div class="col-lg-2 col-offset-1">
  <a href="/users/me/orders" class="btn btn-lg btn-default">My Orders</a>
</div>
