{{#extend "css"}}
<link rel="stylesheet" href="/css/contact.css">
{{/extend}}

{{#extend "banner"}}
<div class="banner contact-us-banner"></div>
{{/extend}}

<div class="page page-contact-us container contact-us-container">

  {{! Server side errors }}
  <div class="row contact-us-alert hide">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="alert alert-danger fade in">
        <strong>Uh oh!</strong> Something went wrong. Please contact us directly!
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-2">
      <h1>Contact Us</h1>
      <strong>We love hearing from you!</strong>
      <p>
        Please get in touch with anything at all -- questions, help,
        ideas, or just to say hello.
      </p>

      <ul class="icons-ul contact-ul">
        <li>
          <i class="icon-li gb-icon-email"></i>
          <strong>Email</strong>
          <p>{{{mailto config.emails.support}}}</p>
        </li>
        <li>
          <i class="icon-li gb-icon-phone"></i>
          <strong>Phone</strong>
          <p>{{phoneNumber config.phone.support}}</p>
        </li>
      </ul>
    </div>

    <div class="col-md-4 col-md-offset-1">
      <div class="contact-form">
        <form class="contact-us-form" role="form">
          <div class="form-group">
            <label for="contactName">Name</label>
            <input type="text" class="form-control contact-us-name" id="contactName" placeholder="Enter Name">
          </div>
          <div class="form-group">
            <label for="contactEmail">Email</label>
            <input type="text" class="form-control contact-us-email" id="contactEmail" placeholder="Enter Email">
          </div>
          <div class="form-group">
            <label for="contactMessage">Message</label>
            <textarea class="form-control contact-us-message" rows="5" id="contactMessage" placeholder="Enter Message"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary pull-right contact-us-send">Send</button>
          </div>
        </form>
      </div>
    </div>

  </div>
</div>

{{#extend "scripts"}}
<script src="/components/amanda/releases/latest/amanda.min.js"></script>
<script src="/js/models/contact-us.js"></script>
<script src="/js/views/form-view.js"></script>
<script src="/js/views/contact-us-view.js"></script>
<script>
  var contactUs = new ContactUsView({ el: '#main' });
</script>
{{/extend}}