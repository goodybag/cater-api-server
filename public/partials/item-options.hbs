{{#each options_sets}}
  <fieldset class="item-options-fieldset" data-options-set-id="{{this.id}}">
    <legend>{{this.name}}</legend>
    {{#each this.options}}
      <div class="{{#eq ../type 'radio'}}radio{{else}}checkbox{{/eq}}">
        <label>
          {{#eq ../type 'radio'}}
          <input
            {{#if ../state}}checked{{/if}}
            {{#if ../default_state}}checked{{/if}}
            type="radio" id="item-option-{{../id}}"
            name="{{../../name}}" value="{{../id}}"
          >
          {{else}}
          <input
            {{#if ../state}}checked{{/if}}
            {{#if ../default_state}}checked{{/if}}
            type="checkbox" id="item-option-{{../id}}"
            name="{{../../name}}" value="{{../id}}"
          >
          {{/eq}}

          {{this.name}}

          {{#if this.price}}
          <span class="option-price">(+{{dollars this.price}})</span>
          {{/if}}
          <p class="option-description">{{this.description}}</p>
        </label>
      </div>
    {{/each}}
  </fieldset>
{{/each}}
