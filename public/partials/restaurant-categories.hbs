{{#each restaurant.categories}}
  {{#contains menus "group"}}
    <div id="group-{{id}}" class="panel menu-category menu-full menu-group">
      <div class="panel-heading menu-category-heading">
        <h3 class="panel-title menu-category-title">[Group] {{name}}</h3>
        <p class="category-description">{{description}}</p>
      </div>
      <div class="list-group list-group-flush category" id="category-{{id}}">
        {{#each items}}
        <a href="#" class="list-group-item item" id="item-{{id}}">
          <div class="row">
            {{#if photo_url}}
            <div class="col-lg-2">
              <img src="{{filepicker photo_url}}">
            </div>
            {{/if}}
            <div class="col-lg-{{#if photo_url}}10{{else}}12{{/if}}">
              <div class="row">
                <h5 class="list-group-item-heading col-sm-7">
                  {{name}}
                  {{#each tags}}
                  {{#with (ref ../../../../config.diets this)}}
                  {{> diet_tag}}
                  {{/with}}
                  {{/each}}
                </h5>
                <dl class="item-legend col-sm-5">
                  {{#if hide_pricing}}
                  <div class="feeds-price-wrapper">
                    <div class="feeds"><dt>Click for price</dt></div>
                  </div>
                  {{else}}
                  <div class="feeds-price-wrapper">
                    <div class="feeds">
                      <dt>Feeds</dt>
                      <dd>{{range feeds_min feeds_max}}</dd>
                    </div>
                    <div class="price">
                      <dt>Price</dt>
                      <dd>{{dollars price}}</dd>
                    </div>
                  </div>
                  {{/if}}
                </dl>
              </div>
              <div class="row">
                <p class="list-group-item-text col-sm-7">{{description}}</p>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  {{/contains}}
{{/each}}

