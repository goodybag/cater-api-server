<div class="row auth">
  <div class="col-lg-5">
    {{#if error}}
    <div class="alert alert-danger">Invalid email address or password. Try again.</div>
    {{/if}}
    <form method="POST" action="/session{{query}}" class="login-form top-form">
      <fieldset>
        <legend>Log In</legend>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="email address" value="{{email}}" autofocus="autofocus">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="password">
        </div>
        <div class="row">
          <div class="col-lg-6 form-group">
            <a href="javascript:void(0);" id="forgot-password" class="top-form-toggle">forgot password</a>
            <div class="checkbox hide">
              <label>
                <input type="checkbox"> Remember me
              </label>
            </div>
          </div>
          <div class="col-lg-6 form-group">
            <button type="submit" class="btn btn-primary btn-lg pull-right">Log in</button>
          </div>
        </div>
      </fieldset>
    </form>
    <form class="forgot-password-form top-form hide">
      <fieldset>
        <legend>Forgot Password</legend>
        <div class="alert alert-danger hide"></div>
        <div class="alert alert-success hide">Password reset link sent.  Check your email.</div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" name="email" class="form-control" placeholder="email address" value="{{email}}">
        </div>
        <div class="row">
          <div class="col-lg-6">
            <a href="javascript:void(0)" id="return-to-login" class="top-form-toggle">Log In</a>
          </div>
          <div class="col-lg-6">
            <button type="submit" class="btn btn-lg btn-primary pull-right">Reset Password</button>
          </div>
        </div>
      </fieldset>
    </form>
    <hr>
    <form method="POST" action="/waitlist">
      <fieldset>
        <span class="help-block">Give us your email and we'll let you know when Goodybag is available.</span>
        <div class="form-group">
          <label>Email address</label>
          <input type="email" name="email" class="form-control"placeholder="email address" value="{{email}}">
        </div>
        <div class="form-group">
          <label>Organization</label>
          <input type="text" name="organization" class="form-control"placeholder="your organization" value="{{organization}}">
        </div>
       <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg pull-right">Sign Up for Waitlist</button>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="col-lg-7">
    <img src="http://images4.alphacoders.com/169/169978.jpg" width="575px" height="300px" class="img-rounded" />
  </div>
</div>

{{#extend "scripts"}}
<script src="/js/views/auth-view.js"></script>
<script>
  console.log('hi');
  var view = new AuthView({el: '.auth', query: '{{query}}' });
</script>
{{/extend}}
