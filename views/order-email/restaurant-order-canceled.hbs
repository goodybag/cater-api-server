{{#extend "body"}}
    <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
      <td style="width: 10px"></td>
      <td>
        <table cellpadding="0" cellspacing="0" style="width: 100%;">
          <tr>
            <td style="width: 46%; padding-bottom: 22px;">
              {{#is order.type 'pickup' 'courier'}}
                {{> order_email_details_restaurant_pickup }}
              {{else}}
                {{> order_email_details_restaurant_delivery }}
              {{/is}}
            </td>
            <td style="width: 54%; padding-top: 2px; padding-bottom: 22px; padding-left: 12px;">
              <h1 style="line-height: 36px; margin-top: 0; margin-right: 0; margin-bottom: 0; margin-left: 0; padding-top: 0; padding-right: 0; padding-bottom: 0; padding-left: 0; font-weight: 500; font-size: 28px; font-family: Helvetica, arial, sans-serif; text-align: left; color: #695a42">Order #{{order.id}}<br>has been <span style="color: #D9534F; font-weight: 700">Canceled</span></h1>
              <p style="text-align: left; line-height: 22px; font-weight: 300; font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 13px;">Please update your records. This order has been canceled.</p>
            </td>
          </tr>
        </table>

        {{> email_order_items order}}
      </td>
      <td style="width: 10px"></td>
    </tr>
  </table>
{{/extend}}
