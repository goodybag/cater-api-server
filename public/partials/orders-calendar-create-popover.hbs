<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="time" class="col-sm-2 control-label">Time</label>
    <div class="col-sm-10">
      <input type="email" class="form-control time" id="time" placeholder="Time">
    </div>
  </div>
  <div class="form-group">
    <label for="zip" class="col-sm-2 control-label">Zip</label>
    <div class="col-sm-10">
      <input type="password" class="form-control zip" id="zip" placeholder="Zip">
    </div>
  </div>
  <div class="form-group">
    <label for="guests" class="col-sm-2 control-label">Guests</label>
    <div class="col-sm-10">
      <input type="password" class="form-control guests" id="guests" placeholder="Guests">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default btn-search">Search Restaurants</button>
    </div>
  </div>
