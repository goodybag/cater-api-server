<!-- Zip -->
<div class="form-group">
  <label for="search-zip" class="control-label">Zip <span class="error-msg">(Please enter a valid zip)</span></label>
  <input
    id="search-zip"
    required="true"
    list="zips"
    type="text"
    class="form-control form-control-zip"
    name="zip"
    placeholder="zip"
    maxlength="5"
    value="{{#if orderParams.zip}}{{orderParams.zip}}{{else}}{{order.zip}}{{/if}}"
  />

  <datalist id="zips">
    {{#if order}}
    {{#if defaultAddress}}
    <option value="{{defaultAddress.zip}}">Your Default Address</option>
    {{/if}}
    {{#each order.restaurant.delivery_zip_groups}}
      {{#each this.zips}}
        <option value="{{this}}">
      {{/each}}
    {{/each}}
    {{/if}}
  </datalist>
</div>

<!-- Date -->
<div class="form-group">
  <label for="search-delivery-date" class="control-label">Delivery Date</label>
  <input
    id="search-delivery-date"
    required="true"
    type="text"
    class="form-control"
    name="date"
    placeholder="delivery date"
    maxlength="10"
    value="{{#if orderParams}}{{formatDateTime orderParams.date}}{{/if}}"
  />
</div>

<!-- Time -->
<div class="form-group">
  <label for="search-delivery-time" class="control-label">Delivery Time</label>
  <input
    type="text"
    required="true"
    class="form-control form-control-time"
    name="time-range"
    placeholder="delivery time"
    value="{{#if orderParams.time}}{{join (timeToRange (formatTime orderParams.time "h:mm A") "h:mm A") " - "}}{{/if}}"
    disabled="true"
  />
  <input
    id="search-delivery-time"
    type="text"
    class="form-control form-control-time"
    name="time"
    placeholder="delivery time"
    maxlength="8"
    value="{{#if orderParams}}{{formatTime orderParams.time}}{{/if}}"
  />
</div>

<!-- Guests -->
<div class="form-group">
  <label for="search-guests" class="control-label">Guests</label>
  <input
    id="search-guests"
    type="text"
    class="form-control form-control-guests"
    name="guests"
    placeholder="guests"
    maxlength="4"
    value="{{#if orderParams}}{{orderParams.guests}}{{/if}}"
  />
</div>
