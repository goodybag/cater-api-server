{{#extend "css"}}
<link rel="stylesheet" href="/css/order-totals.css">
{{/extend}}

<dl class="dl-horizontal order-totals">
  {{#if order.payment_method}}
    <dt class="dt-card">Card #:</dt>
    <dd>****{{order.payment_method.data.last_four}}</dd>
  {{/if}}
  {{#if order.restaurant.minimum_order}}
  <div class="minimum {{#if order.below_min}} error {{/if}}">
    <dt>Order Minimum:</dt>
    <dd>{{dollars order.restaurant.minimum_order}}</dd>
  </div>
  {{/if}}
  <dt>Subtotal:</dt>
  <dd>{{dollars order.sub_total}}</dd>
  <dt>Delivery Fee:</dt>
  <dd>{{dollars order.restaurant.delivery_fee}}</dd>
  <dt>Tax:</dt>
  <dd>{{tax order.sub_total order.restaurant.delivery_fee}}</dd>
  <dt>Tip:</dt>
  <dd>{{dollars order.tip}}</dd>
  <dt class="total">Total:</dt>
  <dd class="total">{{total order.sub_total order.restaurant.delivery_fee order.tip}}</dd>
</dl>
