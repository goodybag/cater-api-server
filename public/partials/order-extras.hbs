{{#if order.restaurant.amenities}}
<div class="col-md-12">
  <legend>Extras</legend>
  <p>
    {{#each order.restaurant.amenities}}
    {{#if enabled}}
    <div class="amenity">
      <input
        type="checkbox"
        class="amenity-checkbox"
        data-amenity-id="{{id}}"
        value="{{price}}"
        {{#if checked}}checked{{/if}}> {{name}} {{#if description}}- {{description}}{{/if}}
        ({{surcharge price}})
    </div>
    {{/if}}
    {{/each}}
  </p>
</div>
{{/if}}