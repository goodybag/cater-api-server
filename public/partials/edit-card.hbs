{{#extend "css"}}
<link rel="stylesheet" href="{{cdn "/css/edit-card.css"}}">
{{/extend}}

<input type="hidden" name="id" value="{{id}}">
<div class="row">
  <div class="form-group col-sm-6">
    <label class="control-label">Card Title (Optional) e.g. My Company Card</label>
    <input value="{{name}}" type="text" name="card_name" class="form-control credit-card-name" placeholder="My Company Card">
</div>
</div>
<div class="row">
  <div class="form-group col-sm-6">
    <label class="control-label">Card Number</label>
    <input type="text" name="card_number" class="form-control credit-card-number">
  </div>
</div>
<div class="row">
  <div class="form-group col-sm-6">
    <label class="control-label">Security Code</label>
    <input type="text" name="security_code" class="form-control credit-card-security">
  </div>
</div>
<div class="row hide">
  <div class="form-group col-sm-6">
    <label class="control-label">Billing Zip</label>
    <input type="text" name="postal_code" class="form-control credit-card-zip">
  </div>
</div>

<div class="expiration-wrapper form-inline">
  <label class="control-label">Expiration Date</label>
  <div class="form-group">
    <select name="expiration_month" class="form-control">
      {{#range2 '1' '12'}}
        <option
          value="{{pad this 2}}"
          {{#if ../data}}
          {{#eq this ../../data.expiration_month}}selected="selected"{{/eq}}
          {{/if}}
        >{{pad this 2}}</option>
      {{/range2}}
    </select>
  </div>
  <div class="form-group form-group-separator">/</div>
  <div class="form-group">
    <select name="expiration_year" class="form-control">
      {{#range2 '2013' '2025'}}
        <option
          value="{{this}}"
          {{#if ../data}}
          {{#eq this ../../data.expiration_year}}selected="selected"{{/eq}}
          {{/if}}
        >{{this}}</option>
      {{/range2}}
    </select>
  </div>
</div>
