<address>
  {{#if address}}
    {{#if address.name}}
    <strong>{{address.name}}</strong><br>
    {{else}}
    <strong>{{../address_name}}</strong></br>
    {{/if}}
  {{else}}
  <strong>{{name}}</strong><br>
  {{/if}}
  {{street}}<br>
  {{#if street2}}
  {{street2}}<br>
  {{/if}}
  {{#if city}}{{city}}, {{/if}}{{#if state}}{{state}} {{/if}}{{zip}}<br>
  {{#if phone}}
  Phone: {{phoneNumber phone}}<br>
  {{/if}}
  {{#if delivery_instructions}}
  Delivery Instructions: {{delivery_instructions}}<br>
  {{/if}}
</address>
