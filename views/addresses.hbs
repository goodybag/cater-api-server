<div class="container">
  <h1 class="col-lg-12 page-title">Address Book</h1>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="panel">
        <div class="panel-body">
          {{#each addresses}}
            <div class="list-group">
              <div class="list-item">
                <strong>
                  Address {{@index}}
                </strong>
                {{> address }}
                <hr>
              </div>
            </div>
          {{/each}}
          <a href="addresses/new" class="btn btn-primary">Add new address</a>
        </div>
      </div>
    </div>
  </div>
</div>
