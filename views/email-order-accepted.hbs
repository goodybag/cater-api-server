{{#extend "body"}}
  <!--<LeadText>-->
  <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
      <td style="width: 100%; padding-top: 2px; padding-bottom: 22px">
        <h1 style="line-height: 22px; margin-top: 0; margin-right: 0; margin-bottom: 0; margin-left: 0; padding-top: 0; padding-right: 0; padding-bottom: 0; padding-left: 0; font-weight: 300; font-size: 18px; font-family: Helvetica, arial, sans-serif; text-align: center; color: #695a42">Your order placed on <strong>{{datepart order.datetime}}</strong> at <strong>{{order.restaurant.name}}</strong> has been</h1>
      </td>
    </tr>
  </table>
  <!--</LeadText>-->

  <!--<StatusLabel>-->
  <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr>
      <td width="50%"></td>
      <td style="padding-top: 8px; padding-bottom: 8px; padding-left: 24px; padding-right: 24px; background: #5CB85C; color: #ffffff; font-size: 16px; font-family: Helvetica, arial, sans-serif; text-align: center;">accepted</td>
      <td width="50%"></td>
    </tr>
    <tr>
      <td colspan="3" style="width: 100%; padding-top: 16px"></td>
    </tr>
  </table>
  <!--</StatusLabel>-->

  <!--<OrderDetails>-->
  <table cellpadding="0" cellspacing="0" style="width: 100%">
    <tr>
      <td class="main-width-gutter" width="50%"></td>
      <td class="main-width-constraint" width="400" style="width: 400px">
        <table class="main-width-constraint" cellpadding="0" cellspacing="0" style="width: 400px; margin-left: auto; margin-right: auto; background: #ffffff; border: solid #ccccc0 1px; border-radius: 4px">
        <!--<OrderDetailsHeader>-->
        <tr>
          <td colspan="2" style="width: 100%; padding-top: 13px; padding-bottom: 10px; font-size: 24px; font-weight: 300; font-family: Helvetica, arial, sans-serif; color: #695a42; text-align: center; border-bottom: solid #CCCCC0 1px">Order Details</td>
        </tr>
        <!--</OrderDetailsHeader>-->

        <!--<OrderDetailsSpacer>-->
        <tr>
          <td colspan="2" style="width: 100%; padding-top: 16px"></td>
        </tr>
        <!--</OrderDetailsSpacer>-->

        <!--<OrderDetailsBody>-->
        <tr>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-right: 10px; text-align: right">Delivery Date:</td>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-left: 10px; text-align: left;">{{datepart order.datetime}}</td>
        </tr>
        <tr>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-right: 10px; text-align: right">Delivery Time:</td>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-left: 10px; text-align: left;">{{timepart order.datetime}}</td>
        </tr>
        <tr>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-right: 10px; text-align: right">Guests:</td>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-left: 10px; text-align: left;">{{order.guests}}</td>
        </tr>
        <tr>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-right: 10px; text-align: right">Subtotal:</td>
          <td style="font-family: Helvetica, arial, sans-serif; color: #695A42; font-size: 14px; width: 50%; padding-top: 10px; padding-bottom: 10px; padding-left: 10px; text-align: left;">${{dollars order.sub_total}}</td>
        </tr>
        <!--</OrderDetailsBody>-->

        <!--<OrderDetailsSpacer>-->
        <tr>
          <td colspan="2" style="width: 100%; padding-top: 10px;"></td>
        </tr>
        <!--</OrderDetailsSpacer>-->
      </table>
      </td>
      <td class="main-width-gutter" width="50%"></td>
    </tr>
  </table>
  <!--</OrderDetails>-->

  <table cellpadding="0" cellspacing="0" style="width: 100%;">
    <tr><td style="width: 100%; padding-top: 16px"></td></tr>
  </table>

  <a href="{{config.baseUrl}}/orders/{{order.id}}" style="font-size: 16px; font-weight: 300; color: #1155cc">Click here to view order</a>
{{/extend}}