            </div>
          </div>
          <div class="list-item">
            <label class="component item-selector">
              <input type="checkbox">
            </label>
            <div class="component main">
              <a class="item-title" href="#">Taco Deli</a>
              <div class="item-details">#100 Austin, TX</div>
            </div>
          </div>
          <div class="list-item">
            <label class="component item-selector">
              <input type="checkbox">
            </label>
            <div class="component main">
              <a class="item-title" href="#">Taj Palace</a>
              <div class="item-details">#100 Austin, TX</div>
            </div>
          </div>
        </div>    </div>
{{/extend}}


{{#extend "scripts"}}

<script>
require( ['app/views/admin/restaurant-payment-view', 'app/models/restaurant'], function( RestaurantPaymentView, Restaurant ){
  var view = new RestaurantPaymentView({
    el: '.page-restaurant-payments'
  , form: '.form-restaurant-payments'
  , list: '.table-restaurant-payments'
  , restaurant: new Restaurant({{{json restaurant}}})
  });
});
</script>
