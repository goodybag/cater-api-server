<div class="list-group-item without-items{{#if order.orderItems.length}} hide{{/if}}">
  <p class="list-item-text no-items">Click a menu item on the left to add it to your order.</p>
  {{#if order.restaurant.minimum_order}}
  <p class="minimum-order">Minimum order: {{dollars order.restaurant.minimum_order}}</p>
  {{/if}}
</div>

<div class="col-lg-12">
  <table class="table order-table with-items{{#unless order.orderItems.length}} hide{{/unless}}">
    <tbody>
      {{#each order.orderItems}}
      <tr id="order-item-{{this.id}}">{{> order_item_summary}}</tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="panel-footer with-items{{#unless order.orderItems.length}} hide{{/unless}}">
  <div class="row subtotal-row">
    <div class="col-lg-12">
      Subtotal
      <div class="subtotal pull-right">{{dollars order.sub_total}}</div>
    </div>
  </div>
  <div class="row checkout-row">
    <div class="col-lg-6">
      {{#if order.restaurant.minimum_order}}
      <em class="minimum-order{{#unless order.below_min}} hide{{/unless}}">Minimum order: {{dollars order.restaurant.minimum_order}}</em>
      {{/if}}
    </div>
    <div class="col-lg-6">
      <a href="/orders/{{order.id}}" class="btn btn-primary btn-checkout pull-right"{{#unless order.submittable}} disabled="disabled"{{/unless}}>Checkout</a>
    </div>
  </div>
</div>
