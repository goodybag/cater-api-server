<div class="panel menu-order-params">
  {{#with order}}
  <div class="panel-body">
    {{#if is_pickup}}
      <div class="panel-title">Your order is for:</div>
      <dl>
        <dt class="order-type">Pickup:</dt>
        <dd>
          <div class="address">{{address restaurant}}</div>
          <a class="btn-change-order-params pull-right" href="#">Change</a>
        </dd>
        <dt>Date:</dt>
        <dd>{{#if datetime}}{{datepart datetime}}{{else}}--{{/if}}</dd>
        <dt>Time:</dt>
        <dd>{{#if datetime}}{{timepart datetime}}{{else}}--{{/if}}</dd>
        <dt>Guests:</dt>
        <dd>{{#if guests}}{{guests}}{{else}}--{{/if}}<a class="btn-change-order-params pull-right" href="#">Change</a></dd>
      </dl>
    {{else}}
      <div class="panel-title">Your order is for:</div>
      <dl>
        <dt class="order-type">Delivery</dt>
        <dd>&nbsp;<a class="btn-change-order-params pull-right" href="#">Change</a></dd>
        <dt>Zip:</dt>
        <dd>{{#if zip}}{{zip}}{{else}}--{{/if}}</dd>
        <dt>Date:</dt>
        <dd>{{#if datetime}}{{datepart datetime}}{{else}}--{{/if}}</dd>
        <dt>Time:</dt>
        <dd>{{#if datetime}}{{timepart datetime}}{{else}}--{{/if}}</dd>
        <dt>Guests:</dt>
        <dd>{{#if guests}}{{guests}}{{else}}--{{/if}}<a class="btn-change-order-params pull-right" href="#">Change</a></dd>
      </dl>
    {{/if}}
  </div>
  {{/with}}
</div>
